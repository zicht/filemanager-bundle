{% block zicht_file_widget %}

    {% if file_url is defined and show_current_file %}
        <p>
            <a href="{{ asset(file_url) }}">
                {% if file_url|lower[-3:] in ['jpg', 'jpeg', 'png', 'gif'] %}
                    <img title="(Current: {{ file_url }})" alt="" src="{{ file_url|imagine_filter('cms') }}">
                {% else %}
                    {{ file_url }}
                {% endif %}
            </a>
        </p>
            {#<input name='purgatory_file_url' class='hidden' type='hidden' value='{{ plain_text_value }}'>#}
            {#&#123;&#35;<input name='purgatory_file_hash' type='hidden' value='{{ plain_text_hash }}'>&#35;&#125;#}
        {{ block('form_widget_simple') }}
        <p>
            <small>{{ "Selecting a file will replace the current file"|trans }}</small>
        </p>
    {% else %}
        {{ block('form_widget_simple') }}
    {% endif %}
{% endblock %}

